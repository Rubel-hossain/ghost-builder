    {{!< default}}
    {{> "tag_header"}}
    <!-- ================= END BREADCUMBS HERE ================================= -->
    <!-- =================== START MAIN CONTENT AREA HERE ========================-->
    <main class="main-content-area section-padding pt-5 clearfix wow fadeIn" data-wow-duration="2s">
        <div class="blog-wrapper page-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="entry-content">
                            <div class="post-wrapper two-column">
                                <div class="row">
                                  {{#foreach posts}}
									<div class="col-lg-6">
									    <div class="single-column">
									        <div class="post-thumb">
									            <a href="{{url}}">
									            <img class="post-card-image"
									            srcset="{{img_url feature_image size='s'}} 300w,
									                    {{img_url feature_image size='m'}} 600w,
									                    {{img_url feature_image size='l'}} 1000w,
									                    {{img_url feature_image size='xl'}} 2000w"
									            sizes="(max-width: 1000px) 400px, 700px"
									            src="{{img_url feature_image size='m'}}"
									            alt="{{title}}"/>
									            </a>
									        </div>
									        <div class="post-details">
									           {{#primary_tag}}
									                <div class="post-meta">
									                    <p><a href="{{url}}"><i class="fa fa-tag"></i> {{name}}</a> <span class="border-line"></span></p>
									                </div>
									            {{/primary_tag}}
									            <div class="title">
									                <h2><a href="{{url}}">{{title}}</a></h2>
									            </div>
									            <div class="post-centent">
									                {{excerpt words="30"}}
									            </div>
									            <div class="post-author d-lg-flex justify-content-between">
									                {{#primary_author}}
									                <div class="author-details d-flex align-items-center">
									                    <div class="author"><img src="{{img_url profile_image}}" alt="{{title}}"/></div>
									                    <div class="author-des">
									                        <p><a href="{{url}}">{{name}}</a><span></span></p>
									                    </div>
									                </div>
									                {{/primary_author}}
									                <div class="btn-more"><a href="{{url}}">{{t "Read More"}}</a></div>
									            </div>
									        </div>
									    </div>
									</div>
                                   {{/foreach}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                       {{pagination}}
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- ======================== END MAIN CONTENT AREA HERE ========================-->