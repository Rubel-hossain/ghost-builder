<ul class="d-flex"> 
    <li><a href="http://facebook.com/share?text={{encode title}}&amp;url={{url absolute='true'}}" target="_blank" onclick="window.open(this.href, 'facebook', 'width=550,height=235');return false;" class="blue"><i class="fab fa-facebook-f"></i></a></li>
    <li><a href="http://twitter.com/share?text={{encode title}}&amp;url={{url absolute='true'}}" target="_blank"  onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;" class="paste"><i class="fab fa-twitter"></i></a></li>
    <li><a href="https://pinterest.com/pin/create/button/?{{url absolute="true"}}{{#if feature_image}}&media={{feature_image}}{{/if}}&description={{excerpt words="20"}}" target="_blank" class="red"><i class="fab fa-pinterest"></i></a></li>
</ul>
