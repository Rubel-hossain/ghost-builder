{{!< default}}
{{> "hero_area"}}
{{#is "home"}}
    <main class="main-content-area section-padding clearfix wow fadeIn" data-wow-duration="2s">
        <div class="blog-wrapper">
            <div class="container">
                <div class="post-wrapper">
                    <div class="col-lg-12 mx-auto">
                        <div class="row">
                          {{> "post_loop_one"}}
                        </div>
                    </div>
                </div>
                <div class="top-author pb-5 mt-3">
                  {{> "top_authors"}}
                </div>
                <div class="post-wrapper">
                    <div class="row">
                        <div class="col-md-12 mx-auto column-reverse">
                          {{> "post_loop_two"}}
                        </div>
                    </div>
                </div>
                <div class="post-wrapper two-column post-last-loop">
                    <div class="row">
                      {{> "post_loop_three"}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 text-center">
                       {{pagination}}
                    </div>
                </div>
            </div>
        </div>
     </main>
{{/is}}

{{#is "paged"}}
 <main class="main-content-area section-padding clearfix wow fadeIn" data-wow-duration="2s">
  <div class="blog-wrapper">
   <div class="container">
    <div class="post-wrapper">
     <div class="col-lg-12 mx-auto">
     <div class="row">
     {{#foreach posts}}
     <div class="row d-md-flex wow fadeIn mb-50" data-wow-duration="2s">
        <div class="col-lg-6">
            <div class="post-thumb">
                <a href="{{url}}">
                <img class="post-card-image"
                srcset="{{img_url feature_image size='s'}} 300w,
                        {{img_url feature_image size='m'}} 600w,
                        {{img_url feature_image size='l'}} 1000w,
                        {{img_url feature_image size='xl'}} 2000w"
                sizes="(max-width: 1000px) 400px, 700px"
                src="{{img_url feature_image size='m'}}"
                alt="{{title}}"/>
                </a>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="post-details">
                {{#primary_tag}}
                <div class="post-meta">
                    <p><a href="{{url}}"><i class="fa fa-tag"></i> {{name}}</a> <span class="border-line"></span></p>
                </div>
                {{/primary_tag}}
                <div class="title">
                    <h2><a href="{{url}}">{{title}}</a></h2></div>
                <div class="post-centent">
                    <p>{{excerpt words="25"}}</p>
                </div>
                <div class="post-author d-lg-flex justify-content-between">
                   {{#primary_author}}
                    <div class="author-details  d-flex align-items-center">
                        <div class="author"><img src="{{img_url profile_image}}" alt="{{title}}"/></div>
                        <div class="author-des">
                            <p><a href="{{url}}">{{name}}</a><span>{{date published_at format="DD MMMM Y"}}</span></p>
                        </div>
                    </div>
                    {{/primary_author}}
                    <div class="btn-more"><a href="{{url}}">{{t "Read More"}}</a></div>
                </div>
            </div>
        </div>
    </div>
 {{/foreach}}
    </div>
   </div>
   <div class="row">
    <div class="col-lg-12 text-center">
       {{pagination}}
    </div>
    </div>
   </div>
   </div>
  </div>
 </main>
{{/is}}

