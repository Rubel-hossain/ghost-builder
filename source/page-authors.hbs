{{!< default}}
{{> "page_header"}}
<main class="main-content-area section-padding pt-5 clearfix wow fadeIn" data-wow-duration="2s">
<div class="page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="entry-content">
                    <div class="row">
                       {{#get "authors" limit="all" include="count.posts"}}
                         {{#foreach authors}}
                            <div class="col-lg-6">
                                <div class="author-block d-md-flex">
                                    {{#if cover_image}}
                                    <div class="author-pic">
                                        <a href="{{url}}"><img src="{{img_url cover_image}}" alt="{{name}}"/></a>
                                    </div>
                                    {{/if}}
                                    <div class="right-text">
                                    <div class="author-name"><a href="{{url}}">{{title}}</a><span> {{plural count.posts empty='(t "No posts")' singular='(t "% post")' plural='(t "% posts")'}}</span></div>
                                        <p>{{bio}}</p>
                                        <div class="btn-author"><a href="{{url}}">{{t "View all post"}}</a></div>
                                    </div>
                                </div>
                            </div>
                        {{/foreach}}
                       {{/get}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</main>