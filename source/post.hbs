{{!< default}}
    <!-- ================= BREADCUMBS HERE ================================= -->
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                  {{#post}}
                    <div class="blog-details-page">
                        <div class="page-title text-center pt-5 pb-3">
                            <h2>{{title}}</h2>
                        </div>
                        {{#primary_author}}
		                <div class="post-author text-center">
                            {{#if profile_image}}
                            <a href="{{url}}"><img src="{{img_url profile_image}}" alt="{{name}}"/></a>
                            {{/if}}
                            <h3><a href="{{url}}">{{name}}</a></h3>
                            <p>{{date published_at format="DDD MMMM Y"}}<span>{{reading_time}}</span></p>
                        </div>
                        {{/primary_author}}
                    </div>
                    {{/post}}
                </div>
            </div>
        </div>
    </div>

    <!-- ================= END BREADCUMBS HERE ================================= -->
    <!-- =================== START MAIN CONTENT AREA HERE ========================-->
    <main>
        <div class="main-centent-area post-details-wrapper section-padding pt-4 clearfix">
            <div class="container">
                <div class="row">
                    <div class="col-md-10 mx-auto">
                      {{#post}}
                        <div class="entry-content">
                          {{#if feature_image}}
                          <div class="post-image image-flex mb-3">
                              <img src="{{img_url feature_image}}" alt="{{title}}">
                          </div>
                          {{/if}}
                           {{content}} 
                        </div>
                        <div class="content-meta mb-5 mt-4 d-md-flex justify-content-between">
                            {{#if tags}}
                            <div class="tags">
                                <span>{{t "Tags"}}:</span>
                                {{tags}}
                            </div>
                            {{/if}}
                            <div class="social-icon">
                                <span>{{t "Share this"}}:</span>
                                {{> "social_share"}}
                            </div>
                        </div>
                        <div class="blog-author-area clearfix">
                           {{#primary_author}}
                            <div class="meta-info d-flex">
                                {{#if profile_image}}
                                <div class="author-name" style="background-image:url({{img_url profile_image}});">
                                </div>
                                {{/if}}
                                <div class="details">
                                    <div class="a-title">
                                        <h4><a href="{{url}}"><strong>{{name}}</strong></a></h4></div>
                                        <p>{{bio}}</p>
                                    <div class="social-icon">
                                        <ul>
                                            {{#if facebook}}
                                            <li><a href="{{facebook_url}}"><i class="fab fa-facebook-f"></i></a></li>
                                            {{/if}}
                                            {{#if twitter}}
                                            <li><a href="{{twitter_url}}"><i class="fab fa-twitter"></i></a></li>
                                            {{/if}}
                                            {{#if website}}
                                            <li><a href="{{website}}"><i class="fa fa-globe"></i></a></li>
                                            {{/if}}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {{/primary_author}}
                        </div>
                        <div class="comments-area pt-5 pb-5 clearfix">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12">
                                       <div class="post-comments">
                                          <div id="disqus_thread"></div>
                                           {{> "disqus_comments"}}
                                       </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                       {{/post}}
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- ======================== END MAIN CONTENT AREA HERE ========================-->
