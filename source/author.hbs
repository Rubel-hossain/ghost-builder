{{!< default}}
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <div class="blog-details-page">
                       {{#author}}
                        <div class="page-title text-center pt-5 pb-3">
                            <h2>{{name}}</h2>
                            <p>{{bio}}</p>
                        </div>
                        <div class="post-author text-center">
                            <a href="{{url}}"><img src="{{img_url profile_image}}" alt="{{name}}"/></a>
                            <h3>{{location}}</h3>
                            <div class="author-social-icon">
                                <ul class="list-inline">
                                     {{#if twitter}}
                                      <li class="list-inline-item"><a href="{{twitter_url}}"><i class="fab fa-twitter"></i></a></li>
                                     {{/if}}
                                     {{#if facebook}}
                                      <li class="list-inline-item"><a href="{{facebook_url}}"><i class="fab fa-facebook-f"></i></a></li>
                                     {{/if}}
                                     {{#if website}}
                                      <li class="list-inline-item"><a href="{{website}}"><i class="fa fa-globe"></i></a></li>
                                     {{/if}}
                                </ul>
                            </div>
                        </div>
                       {{/author}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- =================== START MAIN CONTENT AREA HERE ========================-->
    <main class="main-content-area section-padding pt-5 clearfix wow fadeIn" data-wow-duration="2s">
        <div class="blog-wrapper page-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="entry-content">
                            <div class="post-wrapper two-column">
                                <div class="row">
                                   {{#foreach posts}}
                                    <div class="col-lg-6">
                                        <div class="single-column">
                                            <div class="post-thumb">
                                                <a href="{{url}}"><img src="{{img_url feature_image}}" alt="{{title}}"/></a>
                                            </div>
                                            <div class="post-details">
                                               {{#primary_tag}}
                                                <div class="post-meta">
                                                    <p><a href="{{url}}"><i class="fa fa-tag"></i> {{name}}</a><span class="border-line"></span></p>
                                                </div>
                                                {{/primary_tag}}
                                                <div class="title">
                                                    <h2><a href="{{url}}">{{title}}</a></h2></div>
                                                <div class="post-centent">
                                                    <p>{{excerpt words="20"}}</p>
                                                </div>
                                                <div class="post-author d-lg-flex justify-content-betwe">
                                                    {{#primary_author}}
                                                    <div class="author-details  d-flex align-items-center">
                                                        <div class="author"><img src="{{img_url profile_image}}" alt="{{name}}"/></div>
                                                        <div class="author-des">
                                                            <p><a href="{{url}}">{{name}}</a><span>{{date published_at format="DD MMMM Y"}}</span></p>
                                                        </div>
                                                    </div>
                                                    {{/primary_author}}
                                                    <div class="btn-more"><a href="{{url}}">{{t "Read More"}}</a></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                   {{/foreach}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                       {{pagination}}
                    </div>
                </div>
            </div>
        </div>
    </main>